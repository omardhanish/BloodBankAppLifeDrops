<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.hackathonbloodapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".RegisteringWithoutLoginActivity"></activity>

        <activity android:name=".UrgentBloodDetailActivity"></activity>

        <activity android:name=".LoginActivity"></activity>

        <activity android:name=".UpdateUrgentActivityDetail"></activity>

        <activity android:name=".SpinnerActivity"></activity>
        
        <provider
            android:authorities="com.example.android.hackathonbloodapp"
            android:name=".BloodDataProvider"></provider>


    </application>

</manifest>
